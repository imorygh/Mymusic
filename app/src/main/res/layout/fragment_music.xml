<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/music_recycler_view"
        android:layout_height="match_parent"
        android:background="@drawable/item_default"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:background="#f8444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="barClick"
        >

        <ImageButton
            android:id="@+id/play_button"
            android:padding="28dp"
            android:background="@drawable/ic_action_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

        <ImageButton
            android:id="@+id/previous_button"
            android:padding="20dp"
            android:background="@drawable/ic_action_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/play_button"
            android:layout_marginEnd="20dp"/>
        <ImageButton
            android:id="@+id/next_button"
            android:padding="20dp"
            android:background="@drawable/ic_action_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/play_button"
            android:layout_marginStart="20dp"
            />
    </RelativeLayout>
</RelativeLayout>
